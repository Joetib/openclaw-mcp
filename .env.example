# OpenClaw MCP Server Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# OpenClaw Connection
# =============================================================================

# URL of your OpenClaw gateway
OPENCLAW_URL=http://127.0.0.1:18789

# =============================================================================
# Server Settings (SSE transport only)
# =============================================================================

# Port for SSE server
PORT=3000

# Host to bind to (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Enable debug logging
DEBUG=false

# =============================================================================
# CORS Configuration (SSE transport only)
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Examples:
#   CORS_ORIGINS=*                           # Allow all origins (not recommended for production)
#   CORS_ORIGINS=none                        # Disable CORS entirely
#   CORS_ORIGINS=https://claude.ai           # Single origin
#   CORS_ORIGINS=https://claude.ai,https://your-app.com  # Multiple origins
#   CORS_ORIGINS=*.example.com               # Wildcard subdomain
CORS_ORIGINS=https://claude.ai

# =============================================================================
# Authentication (SSE transport only)
# =============================================================================

# Enable OAuth/API key authentication (REQUIRED for production!)
OAUTH_ENABLED=true

# Static API keys (comma-separated) - simpler alternative to OAuth
# Generate secure keys: openssl rand -hex 32
API_KEYS=

# OAuth provider settings (optional, for enterprise deployments)
# OAUTH_ISSUER=https://auth.example.com
# OAUTH_INTROSPECTION_ENDPOINT=https://auth.example.com/oauth/introspect
# OAUTH_CLIENT_ID=openclaw-mcp
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_REQUIRED_SCOPES=openclaw:read,openclaw:write
